<%- model_class = ReturnReason -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:reason) %>:</strong></dt>
  <dd><%= @return_reason.reason %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              return_reasons_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_return_reason_path(@return_reason), :class => 'btn btn-default' %>

