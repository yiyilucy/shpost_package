<%= form_for @return_reason, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :reason, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :reason, :class => 'text_field' %>
    </div>
  </div>
  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <% if can? :index, ReturnReason %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              return_reasons_path, :class => 'btn btn-default' %>
  <% end %>
<% end %>
